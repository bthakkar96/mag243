<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.upsell" remove="true"/>

        <referenceContainer name="content">
            <container name="product-imgs" htmlTag="div" htmlClass="product-imgs-container" before="product.info.details">
                <block class="Magento\Framework\View\Element\Template" name="imgs" template="Magento_Catalog::product/view/product-img.phtml"/>
            </container>
        </referenceContainer>
        <referenceContainer name="product.info.media" remove="true"/>
        <referenceContainer name="content.aside" remove="true"/>
       
        <!-- <move element="product.info.details" before="product-imgs" /> -->
    </body>
</page>
